generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("ADMIN")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  title       Json // { en: "", fr: "", ar: "" }
  description Json
  category    String
  imageUrl    String
  publicId    String // Cloudinary public ID
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Service {
  id          String   @id @default(cuid())
  title       Json
  description Json
  icon        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model QuoteRequest {
  id          String   @id @default(cuid())
  firstName   String
  lastName    String
  email       String
  company     String?
  phone       String?
  description String
  fileUrl     String?
  status      String   @default("PENDING") // PENDING, REVIEWED, CONTACTED, COMPLETED
  createdAt   DateTime @default(now())
}

enum JobStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
  TEMPORARY
}

enum ApplicationStatus {
  NEW
  REVIEWING
  INTERVIEW
  OFFER
  REJECTED
  HIRED
}

model JobListing {
  id           String        @id @default(cuid())
  title        Json
  department   String
  location     String        @default("Workshop")
  jobType      JobType       @default(FULL_TIME)
  salaryRange  String?
  description  Json
  requirements Json
  status       JobStatus     @default(DRAFT)
  applications Application[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Application {
  id        String            @id @default(cuid())
  fullName  String
  email     String
  phone     String
  cvUrl     String
  message   String?
  notes     String?
  jobId     String
  job       JobListing        @relation(fields: [jobId], references: [id], onDelete: Cascade)
  status    ApplicationStatus @default(NEW)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
}

model SiteSetting {
  id           String  @id @default("singleton")
  siteName     String  @default("MANA")
  address      String  @default("123 Industrial Zone, Agricultural District")
  email        String  @default("contact@manaworkshops.com")
  phone        String  @default("+1 (234) 567-890")
  whatsapp     String?
  facebook     String?
  linkedin     String?
  instagram    String?
  logoUrl      String?
  heroImageUrl String?

  // Home Page Media
  introImageUrl        String?
  portfolioProject1Url String?
  portfolioProject2Url String?
  portfolioProject3Url String?

  // Services Media
  servicesMachiningUrl     String?
  servicesRepairUrl        String?
  servicesFabricationUrl   String?
  servicesModificationUrl  String?
  servicesManufacturingUrl String?
  servicesRestorationUrl   String?
  servicesGuidanceUrl      String?

  // About Page Media
  aboutStoryUrl       String?
  aboutVisualBreakUrl String?

  updatedAt DateTime @updatedAt
}
